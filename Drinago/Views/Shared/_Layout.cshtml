    <link rel="stylesheet" href="http://cdn.leafletjs.com/leaflet/v0.7.7/leaflet.css" />
    <script src="http://cdn.leafletjs.com/leaflet/v0.7.7/leaflet.js"></script>
    <link rel="stylesheet" type="text/css" href="~/Content/custom.css" />
</head>
<body>
    <link rel="shortcut icon" type="image/ico" href="~/favicon.ico">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand pull-left" >
                    <img alt="Brand" id="brand-image" src="https://cdn4.iconfinder.com/data/icons/flatified/128/map.png"/>
                </a>

                <style>
                    .navbar {
                        border: none;
                    }

                    #brand-image {
                        height: 25px;
                    }
                </style>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Drinago", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Welcome", "Index", "Home")</li>
                    <li class="dropdown">
                        <a href="http://drinago.azurewebsites.net/" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            Info<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Basic Info", "Info", "Home")</li>
                            <li>@Html.ActionLink("Geology", "Geology", "Home")</li>
                            <li>@Html.ActionLink("Archeology", "Info", "Home")</a></li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("History", "Info", "Home")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Geography", "Info", "Home")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="http://drinago.azurewebsites.net/" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                      Explore<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Where to stay", "WhereToStay", "Home")</li>
                            <li>@Html.ActionLink("Where to eat", "WhereToEat", "Home")</li>
                            <li>@Html.ActionLink("Where to shop", "WhereToShop", "Home")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("What to see", "WhatToSee", "Home")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("What to do", "WhatToDo", "Home")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Maps & Guides", "Transportation", "Home")</li>
                    <li>@Html.ActionLink("About us", "About", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">

        @RenderBody()

        <br />
        <footer class="container-fluid">
            <div class="row rowcss">
                <div class="col-md-4 footer-left">
                    <br />
                    <ul class="list-inline">
                        <li>@Html.ActionLink("Welcome", "Home", "Home")</li>
                        <li>@Html.ActionLink("Info", "Info", "Home")</li>
                        <li>@Html.ActionLink("Maps & Guides", "Transportation", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                    </ul>
                    <p class="footertxt">© Drinago 2016</p>
                </div>
                <div class="col-md-4 footer-right">
                    <br />
                    <ul class="list-inline">
                        <li><a href="https://www.facebook.com/humansofgorazde/?fref=ts">Facebook</a></li>
                        <li><a href="https://twitter.com/">Twitter</a></li>
                        <li><a href="https://plus.google.com/">Google+</a></li>
                        <li><a href="https://www.youtube.com/">Youtube</a></li>
                    </ul>
                </div>
                <div class="col-md-4 footer">
                    <br />
                    <p align="justify">Drinago is a team of two people, for now, but we welcome you to check our GitHub page, where you can help with website issues.<p>
                    <p><a href="https://github.com/vanilija/asp.net_dri">Learn more.</a></p>
                </div>
            </div>
        </footer>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <!--Import jQuery before materialize.js-->

    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script type="text/javascript" src="js/materialize.min.js"></script>

</body>
</html>
